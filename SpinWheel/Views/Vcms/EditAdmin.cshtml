@model SpinWheel.ViewModel.EditAdminViewModel
@{
    ViewBag.Title = "Cập nhật quản trị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Cập nhật quản trị viên</h2>
<a class="btn quick-link" href="@Url.Action("CreateAdmin","Vcms")"><i class="far fa-list mr-1"></i> Thêm mới quản trị viên</a>
<div class="box_content px-300">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <table class="form_table">
            <tr>
                <td class="form_name">@Html.LabelFor(model => model.Role)</td>
                <td class="form_text">@Html.EnumDropDownListFor(model => model.Role)</td>
            </tr>
            <tr>
                <td class="form_name">@Html.LabelFor(model => model.Username)</td>
                <td class="form_text">@Html.EditorFor(model => model.Username)</td>
            </tr>
            <tr>
                <td class="form_name">@Html.LabelFor(model => model.Password)</td>
                <td class="form_text">@Html.PasswordFor(model => model.Password, new{placeholder = "Để trống nếu không thay đổi"})</td>
            </tr>
            <tr>
                <td class="form_name">@Html.LabelFor(model => model.Active)</td>
                <td class="form_text">@Html.EditorFor(model => model.Active)</td>
            </tr>
            <tr>
                <td class="form_name"></td>
                <td class="form_text">
                    <input type="submit" class="btn quick-link" value="Cập nhật" />
                </td>
            </tr>
        </table>
    }
</div>
@Html.Action("ListAdmin", "Vcms")