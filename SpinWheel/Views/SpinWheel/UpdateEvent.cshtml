@model SpinWheel.Models.Event
@{
    ViewBag.Title = "Cập nhật sự kiện";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Cập nhật sự kiện</h2>
<a class="btn quick-link" id="create-cat" href="#list-event"><i class="far fa-list mr-1"></i> Danh sách sự kiện</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            @using (Html.BeginForm("UpdateEvent", "SpinWheel", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <table class="form_table form-table-cat">
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.EventName)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.EventName)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.BgPC)</td>
                        <td class="form_text">@Html.TextBoxFor(a => Model.BgPC, new { type = "file" }) <span class="red-warring">Chấp nhận ảnh jpg, png, gif, jpeg < 4MB</span></td>
                    </tr>
                    @if (Model.BgPC != null)
                    {
                        <tr>
                            <td class="form_name"></td>
                            <td class="form_text"><img class="img-border" src="@Path.Combine("/images/events/", Model.BgPC)" /></td>
                        </tr>
                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.BgMobile)</td>
                        <td class="form_text">@Html.TextBoxFor(a => Model.BgMobile, new { type = "file" }) <span class="red-warring">Chấp nhận ảnh jpg, png, gif, jpeg < 4MB</span></td>
                    </tr>
                    @if (Model.BgMobile != null)
                    {
                        <tr>
                            <td class="form_name"></td>
                            <td class="form_text"><img class="img-border" src="@Path.Combine("/images/events/", Model.BgMobile)" /></td>
                        </tr>
                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Url)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.Url)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Sort)</td>
                        <td class="form_text">@Html.EditorFor(model => model.Sort)</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" class="btn quick-link" value="Cập nhật" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="col-sm-12 col-lg-12">
            @Html.Action("ListEvent", "SpinWheel")
        </div>
    </div>
</div>