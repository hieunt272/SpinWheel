@model SpinWheel.Models.Event
@{
    ViewBag.Title = "Cập nhật sự kiện";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Cập nhật sự kiện</h2>
<a class="btn quick-link" id="create-cat" href="#list-event"><i class="far fa-list mr-1"></i> Danh sách sự kiện</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            @using (Html.BeginForm("UpdateEvent", "SpinWheel", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <table class="form_table form-table-cat">
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.EventName)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.EventName)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.BgPC)</td>
                        <td class="form_text">
                            @Html.TextBoxFor(model => model.BgPC, new { type = "file" })
                            <p>Kích thước khuyến nghị: 1920 x 1080</p>
                        </td>
                    </tr>
                    @if (Model.BgPC != null)
                    {
                        <tr id="ImgPreview">
                            <td class="form_name"></td>
                            <td class="form_text">
                                <img class="img-border" src="@Path.Combine("/images/events/",  Model.BgPC)" />
                                <br />
                                @if (!string.IsNullOrEmpty(Model.BgPC))
                                {
                                    <br /><a href="javascript:;" onclick="$('#ImgPreview').hide(); $('#CurrentFile').val('');"><img src="/Content/admin/icon-delete-red.png" alt="" style="vertical-align: middle; margin-top: 0; height: 10px;" /> Xóa ảnh</a>
                                    <input type="hidden" name="CurrentFile" id="CurrentFile" value="@Model.BgPC" />
                                }
                            </td>
                        </tr>
                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.BgMobile)</td>
                        <td class="form_text">
                            @Html.TextBoxFor(model => model.BgMobile, new { type = "file" })
                            <p>Kích thước khuyến nghị: 840 x 1480</p>
                        </td>
                    </tr>
                    @if (Model.BgMobile != null)
                    {
                        <tr id="ImgPreview1">
                            <td class="form_name"></td>
                            <td class="form_text">
                                <img class="img-border" src="@Path.Combine("/images/events/",  Model.BgMobile)" />
                                <br />
                                @if (!string.IsNullOrEmpty(Model.BgMobile))
                                {
                                    <br /><a href="javascript:;" onclick="$('#ImgPreview1').hide(); $('#CurrentFile1').val('');"><img src="/Content/admin/icon-delete-red.png" alt="" style="vertical-align: middle; margin-top: 0; height: 10px;" /> Xóa ảnh</a>
                                    <input type="hidden" name="CurrentFile1" id="CurrentFile1" value="@Model.BgMobile" />
                                }
                            </td>
                        </tr>
                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Active)</td>
                        <td class="form_text">@Html.CheckBoxFor(a => Model.Active, new { @checked = "checked" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Url)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.Url)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.Sort)</td>
                        <td class="form_text">@Html.EditorFor(model => model.Sort)</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" class="btn quick-link" value="Cập nhật" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="col-sm-12 col-lg-12">
            @Html.Action("ListEvent", "SpinWheel")
        </div>
    </div>
</div>