@if (Model.Articles.Any())
{
    var article = Model.Articles.FirstOrDefault();
    <section class="news overflow-hidden">
        <div class="container">
            <div class="title">
                tin tức nổi bật
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="article-large" data-aos="fade-right" data-aos-duration="700">
                        @if (article.Image != null)
                        {
                            <div class="article-img">
                                <a href="@Url.Action("ArticleDetail", "Home", new { url = article.Url })">
                                    <img src="@Path.Combine("/images/articles/", article.Image)" alt="@article.Subject">
                                </a>
                            </div>
                        }
                        <div class="article-body">
                            <div class="subject truncate">
                                <a href="@Url.Action("ArticleDetail", "Home", new { url = article.Url })">
                                    @article.Subject
                                </a>
                            </div>
                            <div class="calendar">
                                <i class="fal fa-calendar-alt"></i>
                                @article.CreateDate.ToString("dd/MM/yyyy")
                            </div>
                            <div class="desc truncate">
                                @article.Description
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    @if (Model.Articles.Count() > 1)
                    {
                        var delay = 200;
                        <div class="row">
                            @foreach (var item in Model.Articles.Skip(1))
                            {
                                <div class="col-lg-12">
                                    <div class="article-home" data-aos="fade-left" data-aos-duration="700" data-aos-delay="@delay">
                                        @if (item.Image != null)
                                        {
                                            <div class="article-img">
                                                <a href="@Url.Action("ArticleDetail", "Home", new { url = item.Url })">
                                                    <img src="@Path.Combine("/images/articles/", item.Image)" alt="@item.Subject">
                                                </a>
                                            </div>
                                        }
                                        <div class="article-body">
                                            <div class="subject truncate">
                                                <a href="@Url.Action("ArticleDetail", "Home", new { url = item.Url })">
                                                    @item.Subject
                                                </a>
                                            </div>
                                            <div class="calendar">
                                                <i class="fal fa-calendar-alt"></i>
                                                @item.CreateDate.ToString("dd/MM/yyyy")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                delay += 100;
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="text-center">
                <a href="@Url.Action("AllArticle", "Home")" class="btn-main">
                    xem thêm
                </a>
            </div>
        </div>
    </section>
}
