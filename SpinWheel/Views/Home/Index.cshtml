@model SpinWheel.ViewModel.HomeViewModel
@using SpinWheel.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = config.Title;
    ViewBag.Description = config.Description;
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("Index");
}

@Html.Action("Header", "Home")
<section class="introduce">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 order-lg-0 order-1">
                <div class="title-intro" data-aos="fade-up" data-aos-duration="700">
                    tạo phần mềm quay số
                    <p>nhanh chóng & chuyên nghiệp</p>
                </div>
                <div class="sub-title" data-aos="fade-up" data-aos-duration="700" data-aos-delay="200">
                    Apps are built based on highly
                </div>
                <div class="media-list">
                    <div class="media" data-aos="zoom-in" data-aos-duration="700" data-aos-delay="400">
                        <div class="media-img">
                            <img src="~/Content/images/img-main/icon-intro.png" />
                        </div>
                        <div class="body">
                            Công ty <br>
                            chất lượng
                        </div>
                    </div>
                    <div class="media" data-aos="zoom-in" data-aos-duration="700" data-aos-delay="500">
                        <div class="media-img">
                            <img src="~/Content/images/img-main/icon-intro (1).png" />
                        </div>
                        <div class="body">
                            Hàng đầu<br>
                            về quay số
                        </div>
                    </div>
                    <div class="media" data-aos="zoom-in" data-aos-duration="700" data-aos-delay="600">
                        <div class="media-img">
                            <img src="~/Content/images/img-main/icon-intro (2).png" />
                        </div>
                        <div class="body">
                            Không thể<br>
                            can thiệp
                        </div>
                    </div>
                    <div class="media" data-aos="zoom-in" data-aos-duration="700" data-aos-delay="700">
                        <div class="media-img">
                            <img src="~/Content/images/img-main/icon-intro (3).png" />
                        </div>
                        <div class="body">
                            Hơn 2 triệu <br>
                            người dùng
                        </div>
                    </div>
                </div>
                <div class="btn-intro">
                    <a href="@Url.Action("ArticleDetail", "Home", new { url = config.AboutUrl })" class="btn-main">
                        Tìm hiểu thêm
                    </a>
                </div>
            </div>
            <div class="col-lg-6 order-lg-1 order-0">
                <div class="img-intro">
                    @if (config.AboutImage != null)
                    {
                        <img src="@Path.Combine("/images/configs/", config.AboutImage)" alt="@config.Title">
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@if (Model.Banners.Any(b => b.GroupId == 1))
{
    var delay = 200;
    <section class="customer">
        <div class="container">
            <div class="title" data-aos="fade-up" data-aos-duration="700">
                KHÁCH HÀNG TIÊU BIỂU
            </div>
            <div class="partner-list">
                @foreach (var item in Model.Banners.Where(b => b.GroupId == 1))
                {
                    <div class="partner-item" data-aos="flip-left" data-aos-duration="700" data-aos-delay="@delay">
                        <a href="@item.Url">
                            @if (item.Image != null)
                            {
                                <img src="@Path.Combine("/images/banners/", item.Image)" alt="@item.BannerName">
                            }
                        </a>
                    </div>
                    delay += 100;
                }
            </div>
        </div>
    </section>
}

@if (Model.Banners.Any(b => b.GroupId == 2))
{
    var delay = 200;
    <section class="why-1">
        <div class="container">
            <div class="title" data-aos="fade-up" data-aos-duration="700">
                TẠI SAO BẠN NÊN SỬ DỤNG PHẦN MỀM <br>
                QUAY SỐ NGẪU NHIÊN Vico SPIN
            </div>
            <div class="row">
                @foreach (var item in Model.Banners.Where(b => b.GroupId == 2))
                {
                    <div class="col-lg-4 col-md-4">
                        <div class="why-item" data-aos="fade-up" data-aos-duration="700" data-aos-delay="@delay">
                            @if (item.Image != null)
                            {
                                <img src="@Path.Combine("/images/banners/", item.Image)" alt="@item.BannerName">
                            }
                            <div class="body">
                                <div class="why-name">
                                    @item.BannerName
                                </div>
                                @if (item.Content != null)
                                {
                                    <div class="desc">
                                        @Html.Raw(item.Content)
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    delay += 100;
                }
            </div>
            @if (Model.Products.Any())
            {
                foreach (var product in Model.Products)
                {
                    <div class="text-center">
                        <a href="@Url.Action("Product", "Home", new { url = product.Url })" class="btn-main">
                            chi tiết sản phẩm
                        </a>
                    </div>
                }
            }
        </div>
    </section>
}
