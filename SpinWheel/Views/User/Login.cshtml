@model SpinWheel.ViewModel.UserLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;600&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/style.css", "~/Content/all.css")
</head>
<body>
    @Html.Action("Header", "Home")
    <div class="bg-second">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-12 col-lg-5 order-lg-1 order-0">
                    <div class="limiter">
                        <div class="wrap-login100">
                            <div class="title"><h2>Đăng nhập</h2></div>
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                <div class="input-group">
                                    <span class="mt-3 user-name">Tài khoản</span>
                                    @Html.TextBoxFor(modelItem => modelItem.Username, new { placeholder = "*Nhập tài khoản" })<br />
                                    @Html.ValidationMessageFor(modelItem => modelItem.Username)
                                </div>
                                <div class="input-group">
                                    <span class="mt-3 user-name">Mật khẩu</span>
                                    @Html.PasswordFor(modelItem => modelItem.Password, new { placeholder = "*Nhập mật khẩu", autocomplete = "off" })<br />
                                    @Html.ValidationMessageFor(modelItem => modelItem.Password)
                                </div>
                                <button type="submit" class="login100-form-btn">
                                    Đăng nhập
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Action("Footer", "Home")

    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/Scripts/scripts.js")
</body>
</html>